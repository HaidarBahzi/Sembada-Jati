<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    >

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/dialog_error_network"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="45dp">

        <ImageView
            android:id="@+id/dialog_error_network_image"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <TextView
            android:textColor="@color/black"
            android:text="No Internet Connection"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:fontFamily="@font/font_mons"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <TextView
            android:textColor="@color/grey"
            android:fontFamily="@font/mons_regular"
            android:textSize="14sp"
            android:padding="10dp"
            android:textAlignment="center"
            android:text="Oops! We're having trouble connecting to the internet. Please make sure you have an active internet connection and try again."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_error_network_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Restart App"
            android:background="@drawable/button_register_and_login" />

    </LinearLayout>

</RelativeLayout>
