<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingStart="10dp">

    <ToggleButton
        android:id="@+id/toggle_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Meja"
        android:textOn="Meja"
        android:background="@drawable/category_toggle_button"
        android:textColor="@drawable/category_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

    <ToggleButton
        android:id="@+id/toggle_chair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="Kursi"
        android:textOn="Kursi"
        android:background="@drawable/category_toggle_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/toggle_table"
        android:textColor="@drawable/category_text"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>