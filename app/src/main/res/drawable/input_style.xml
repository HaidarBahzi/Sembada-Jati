<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape>
            <solid android:color="#00000000" /> <!-- Warna background transparan saat diklik -->
            <stroke
                android:width="2dp"
                android:color="@color/green" /> <!-- Warna border saat diklik -->
            <corners android:radius="10dp" /> <!-- Border radius -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#00000000" /> <!-- Warna background transparan default -->
            <stroke
                android:width="2dp"
                android:color="@color/grey" /> <!-- Warna border default -->
            <corners android:radius="10dp" /> <!-- Border radius -->
        </shape>
    </item>
</selector>

